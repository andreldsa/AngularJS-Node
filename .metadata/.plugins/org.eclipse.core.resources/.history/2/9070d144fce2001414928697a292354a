'use strict';

angular.module('finalnodeApp')
  .controller('ClientShowCtrl', function ($scope, $http, $routeParams, $location) {
    $scope.client = {};
    $http.get('/api/clients/' + $routeParams.id).success(function(client) {
        $scope.client = client;
        $http.get('/api/users/'+client.owner).success(function(user) {
        	$scope.client.owner = user
        })
    });
    $scope.delete = function(client) {
      $http.delete('/api/clients/' + client._id);
      $location.path('/client')
    };
  });